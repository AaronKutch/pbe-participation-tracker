<!-- Using PBE Logo for home-link -->
<nav class="navbar navbar-expand-md navbar-static-top bg-color navbar-dark">
  <%= link_to image_tag("logo.png", width: 100, alt: "Professional Brotherhood of Engineers logo"), events_path, class: "navbar-brand mr-auto"%>
  <button class="navbar-toggler" data-toggle="collapse" data-target="#navbar-collapse-content">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbar-collapse-content">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <%= link_to "Events", events_path, class: "nav-link nav-text" %>
      </li>
      <li class="nav-item">
        <%= link_to "Members", users_path, class: "nav-link nav-text" %>
      </li>
      <li class="nav-item">
        <%= link_to "My Profile", user_path(session[:user_id]), class: "nav-link nav-text" %>
      </li>
      <% if session[:user_id] && Customer.where(id: session[:user_id]).first.role == "admin" %>
        <li class="nav-item">
          <%= link_to "Help", help_admin_path, class: "nav-link nav-text" %>
        </li>
      <% end %>
      <li class="nav-item">
        <% if session[:user_id] %>
          <%= link_to "Logout", access_logout_path, class: "nav-link nav-text" %>
        <% else %>
          <%= link_to "Login", access_login_path, class: "nav-link nav-text" %>
        <% end %>
      </li>
    </ul>
  </div>

</nav>