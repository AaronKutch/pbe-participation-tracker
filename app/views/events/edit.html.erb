<%= render(:partial => '/global_partials/navbar') %>
<div class="container">
  <br/><h1>Edit Event</h1><br/>
  <%= form_for @event do |f| %>
  <table class="table">
    <tr>
      <th>Title</th>
      <td><%= f.text_field :title, required: true %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= f.text_field :description %></td>
    </tr>
    <tr>
      <th>Date</th>
      <td><%= f.datetime_select :date, required: true %></td>
    </tr>
    <tr>
      <th>End Time</th>
      <td><%= f.datetime_select :end_time, required: true %></td>
    </tr> 
    <tr>
      <th>Location</th>
      <td><%= f.text_field :location, required: true %></td>
    </tr>
    <tr>
      <th>Mandatory</th>
      <td><%= f.check_box :mandatory, :value => @event.mandatory %></td>
    </tr>
  </table>

  <%= f.submit("Submit") %>
  <% end %>
</div>