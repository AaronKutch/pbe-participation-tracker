<!doctype html>
<html>
<head>
  <style>
  table, th, td {
    border: 1px solid black;
  }
  </style>
</head>
<body>
  <%= form_for @event do |f| %>
    <table>
      <tr>
        <th>Title</th>
        <td><%= f.text_field :title, required: true %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= f.text_field :description %></td>
      </tr>
      <tr>
        <th>Date</th>
        <td><%= f.datetime_select :date, required: true %></td>
      </tr>
      <tr>
        <th>Location</th>
        <td><%= f.text_field :location, required: true %></td>
      </tr>
      <tr>
        <th>Mandatory</th>
        <td><%= f.check_box :mandatory, :value => @event.mandatory %></td>
      </tr>
    </table>

    <%= f.submit("Submit") %>
  <% end %>
</body>
</html>
