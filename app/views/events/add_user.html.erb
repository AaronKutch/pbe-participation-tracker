<%= render(:partial => '/global_partials/navbar') %>
<%= render(:partial => '/global_partials/flash_notices') %>
<div class="container">
  <br />
  <h1>Add users to event <b><%= @event_record.title %></b></h1><br />
  <table class="table">
    <% Customer.order('last_name').each do |c| %>
        <% unless @event_record.customers.include?(c) %>
        	<tr>
        	<th>Name</th>
        	<td><%= "#{c.first_name} #{c.last_name}" %></td>
        	<th>Email</th>
        	<td><%= c.email %></td>
        	<td><%= link_to 'Add Sign In', events_manual_add_path({user_id: c.id, event_id: @event_record.id}), method: :post, class: "btn btn-secondary" %></td>
        	</tr>  
    	<% end %>
    <% end %>
    </tbody>
  </table>
</div>

