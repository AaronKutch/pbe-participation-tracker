<h2>Event Information</h2><br />
<table class="table">
  <tr>
    <th>Event name</th>
    <td><%= @event_record.title %></td>
  </tr>
  <tr>
    <th>About</th>
    <td><%= @event_record.description %></td>
  </tr>
  <tr>
    <th>Date/Time</th>
    <td><%= @event_record.date.strftime('%a, %b %-d, %Y, %l:%M %P') %></td>
  </tr>
  <tr>
    <th>End Time</th>
    <td><%= @event_record.end_time.strftime('%a, %b %-d, %Y, %l:%M %P') %></td>
  </tr>
  <tr>
    <th>Location</th>
    <td><%= @event_record.location %></td>
  </tr>
  <tr>
    <th>Mandatory</th>
    <td><%= @event_record.mandatory %></td>
  </tr>
  <tr>
    <th>Sign In</th>
    <% if @event_record.date.utc+@utc_offset <= Time.now.utc && Time.now.utc <= @event_record.end_time.utc+@utc_offset %>
      <td><%= link_to 'Sign In', events_mark_attendance_path(event: @event_record.id), method: :post, class: "btn btn-secondary" %></td>
    <% else %>
      <td>Unavailable</td>
    <%end%>
  </tr>
</table>