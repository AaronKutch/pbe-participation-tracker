  <%= render(:partial => '/global_partials/navbar') %>

  <div class="container">
    <br />
    <h2>Event Information</h2><br />
    <table class="table">
      <tr>
        <th>Event name</th>
        <td><%= @event_record.title %></td>
      </tr>
      <tr>
        <th>About</th>
        <td><%= @event_record.description %></td>
      </tr>
      <tr>
        <th>Date/Time</th>
        <td><%= @event_record.date.strftime('%a, %b %-d, %Y, %l:%M %P') %></td>
      </tr>
      <tr>
        <th>End Time</th>
        <td><%= @event_record.end_time.strftime('%a, %b %-d, %Y, %l:%M %P') %></td>
      </tr>
      <tr>
        <th>Location</th>
        <td><%= @event_record.location %></td>
      </tr>
      <tr>
        <th>Mandatory</th>
        <td><%= @event_record.mandatory %></td>
      </tr>
    </table>
    <% if @user_role == 'admin' %>
    <br />

    <%= link_to 'Manually Add Attendees', events_add_user_path({id: @event_record.id}), method: :get, class: "btn btn-secondary" %>
    <br/><br/>

    <h2>Attendees</h2><br />
      <table id="attendees" class="table">
        <% @attendees.each do |a| %>
        <tr>
          <th>Name</th>
          <td><%= "#{a.first_name} #{a.last_name}"%></td>
          <th>Email</th>
          <td><%= a.email%></td>
          <td><%= link_to 'Revoke Sign In', events_revoke_attendence_path({customer: a.id, event: @event_record.id}), method: :post, class: "btn btn-secondary" %></td>
        </tr>
        <% end %>
      </table>
    <% end %>
  </div>
