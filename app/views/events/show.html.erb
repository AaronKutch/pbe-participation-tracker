<!doctype html>
<html>
<head>
<style>
  table, th, td {
    border: 1px solid black;
  }
</style>
</head>
<body>
  <table>
    <tr>
      <th>Event name</th>
      <td><%= @event_record.title %></td>
    </tr>
    <tr>
      <th>About</th>
      <td><%= @event_record.description %></td>
    </tr>
    <tr>
      <th>Date</th>
      <td><%= @event_record.date.to_time() %></td>
    </tr>
    <tr>
      <th>Date/Time</th>
      <td><%= @event_record.date %></td>
    </tr>
    <tr>
      <th>Location</th>
      <td><%= @event_record.location %></td>
    </tr>
    <tr>
      <th>Mandatory</th>
      <td><%= @event_record.mandatory %></td>
    </tr>
  </table>
  <% if @user_role == "admin" %>
    <h2>Attendees</h2>
    <% @attendees.each do |a| %>
      <table>
        <tr>
          <th>Name</th>
          <td><%= "#{a.first_name} #{a.last_name}"%>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= a.email%>
        </tr>
      </table>
    <% end %>
  <% end %>
</body>


